<% if flash[:alert].present? %>
<h4><%= flash[:alert] %></h4>
<% end %>
    <%= form_for user, url: session_form_path do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, :required => true %>

        <%= f.label :password %>
        <%= f.password_field :password, :required => true %>

        <%= f.submit button_name, class: "btn" %>
    <% end %>