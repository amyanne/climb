<h1>Climbs</h1>

<%= form_tag user_logs_path(@user), method: "get" do %>
    <%= text_field_tag :query %>
    <%= submit_tag :search %>
<% end %>





<a href=logs/new>Add a climb log!</a>


         <table>
        <thead>
          <tr>
              <th>Name</th>
              <th>View</th>
              <th>Edit</th>
              <th>Delete</th>
          </tr>
        </thead>

        <tbody>
            <% if current_user == @user %>
                <% @logs.each do |r| %>
                    <tr>
                        <td><%= r.log_date %></td>
                        <td><%= link_to "View", user_log_path(@user, r) %></td>
                        <td><%= link_to "Edit", edit_user_log_path(@user, r) %></td>
                        <td><%= link_to "Delete", user_log_path(@user, r), method: "delete" %></td>
                    </tr>
                <% end %>
            <% end %>
        </tbody>
    </table>

        
            
