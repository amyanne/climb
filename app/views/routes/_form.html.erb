<%= form_for [@user, route] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>

    <%= f.label :location %>
    <%= f.text_field :location, required: true %>

    <%= f.label :grade %>
    <%= f.text_field :grade, required: true %>

    <%= f.submit button_name, class: "btn" %>
<% end %>